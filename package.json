{
  "name": "@peter.naydenov/batch-runner",
  "description": "Execute a batch job with a simple call",
  "version": "2.4.0",
  "license": "MIT",
  "author": "Peter Naydenov",
  "main": "./dist/batch-runner.umd.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/batch-runner.esm.mjs",
      "require": "./dist/batch-runner.cjs",
      "default": "./dist/batch-runner.umd.js"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c",
    "preview": "vite preview",
    "test": "mocha test",
    "cypress": "cypress run --component --browser chrome",
    "cover": "c8 mocha test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeterNaydenov/batch-runner.git"
  },
  "devDependencies": {
    "@peter.naydenov/dom-selector": "^3.1.1",
    "@peter.naydenov/visual-controller-for-vue3": "^2.1.7",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitejs/plugin-vue": "^6.0.2",
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "cypress": "^15.7.0",
    "jsdom": "^27.2.0",
    "mocha": "^11.7.5",
    "vite": "^7.2.6",
    "vue": "^3.5.25"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test",
      "test-data"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "keywords": [
    "batch",
    "job",
    "runner",
    "execute"
  ]
}
